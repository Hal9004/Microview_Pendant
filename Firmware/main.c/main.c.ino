    delay(500);

    uView.drawBitmap(sprite_1_f2);
    uView.display();

    delay(500);

    uView.drawBitmap(sprite_1_f1);
    uView.display();

    delay(500);

  }
  else
  {

    uView.clear(PAGE);      // clear page
     uView.display(); 
   }
}


